<div class="big-container product-manage-wrapper flexed-item">
  <form method="post" action="/prod-edit/{{sneakers._id}}" class="edit-product-form">
    <h3 class="form-title"> Edit Sneaker</h3>
    <div class="form-item-wrapper flexed-item">
      <label for="sneacker-name" class="label-name label">Model name</label>
      <input id="sneacker-name" type="text" class="input-text input" name="name" placeholder="Nike Air Max 90"
        value="{{sneakers.name}}">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneacker-ref" class="label-ref label">RÃ©f.</label>
      <input id="sneacker-ref" type="text" class="input-text input" name="ref" placeholder="ex: NV23498"
        value="{{sneakers.ref}}">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneacker-size" class="label-ref label">Size</label>
      <input id="sneacker-size" type="number" class="input-text input" name="sizes" placeholder="ex: 37"
        value="{{sneakers.sizes}}">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneacker-descr" class="label-descr label">Description</label>
      <input id="sneacker-descr" type="text" class="input-text input" placeholder="The better sneakers to run"
        name="description" value="{{sneakers.description}}">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneacker-price" class="label-price label">Price</label>
      <input id="sneacker-price" type="number" class="sneacker-price input" name="price" min="1"
        value="{{sneakers.price}}">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="sneacker-main-cat" class="label-main-cat label">Main category</label>
      <select id="main_category" class="select" name="category" required>
        <option value="{{sneakers.category}}" selected>{{sneakers.category}}</option>
        <option value="-1" disabled>Choose main Category...</option>
        <option value="men">Men</option>
        <option value="women">Women</option>
        <option value="kids">Kids</option>
      </select>
    </div>

    <div class="form-item-wrapper flexed-item">

      <label class="label">Tags</label>
      {{> form_tags_select}}
    </div>
    <button class="button-primary add-sneacker-btn">Edit this sneaker</button>
  </form>
</div>